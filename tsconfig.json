{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNext",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": [
      "dom",
      "es6",
      "dom.iterable"
    ],
    "baseUrl": ".",
    "types": ["mini-types"],
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.ddx"
  ],
  "exclude": [
    "node_modules"
  ]
}
